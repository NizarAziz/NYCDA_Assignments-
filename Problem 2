class Animal
    def sound ()
    puts " make a funky sound..."
    def speak()
        puts "The animal says:"
        return sound
    end
  
end

class Cat < Animal
    def speak ()
    puts "I am suppose to meow..."
end

class Dog < Animal
    
    def speak()
        puts "Ruff, Ruff..."
    end

end

    cat = Cat.new
        cat.speak

    dog = Dog.new
        dog.speak
    end
end
