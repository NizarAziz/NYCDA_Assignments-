class Animal
    def sound ()
        "make a funky sound..."
    end
    def speak()
        puts ("The animal says:#{self.sound}")
        
    end
 end 


class Cat < Animal
    def sound()
        "I am suppose to meow..."
    end
end

class Dog < Animal
    
    def sound()
        "Ruff, Ruff..."
    end

end

cat = Cat.new
cat.speak

dog = Dog.new
dog.speak
