<h1>Contact Nino</h1>

<%= form_tag('/thanks') do %>
  <p>
    <%= label_tag(:name, 'Name') %>
    <%= text_field_tag(:name, nil, {placeholder: 'Type your name here'}) %>
  </p>
  <p>
    <%= label_tag(:email, 'Email') %>
    <%= text_field_tag(:email, nil, {placeholder: 'Type your email address here'}) %>
  </p>
  <p>
    <%= label_tag(:message) %>
    <%= text_area_tag(:message, nil, placeholder: 'Type a message here') %>
  </p>
  <p><%= submit_tag('Submit') %></p>
<% end %>